{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "http://beta.schemas.opengis.net/json-fg/when.json",
  "title": "when",
  "oneOf": [
    {
      "type": "null"
    },
    {
      "type": "object",
      "properties": {
        "instant": {
          "$ref": "#/$defs/instant"
        },
        "interval": {
          "$ref": "#/$defs/interval"
        }
      }
    }
  ],
  "$defs": {
    "instant": {
      "type": "string"
    },
    "interval": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "oneOf": [
          {
            "$ref": "#/$defs/instant"
          },
          {
            "type": "null"
          }
        ]
      }
    }
  }
}
