{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://beta.schemas.opengis.net/json-fg/featurecollection.json",
  "title": "a JSON-FG Feature Collection",
  "description": "This JSON Schema is part of JSON-FG version 0.2.0-SNAPSHOT",
  "type": "object",
  "required": ["type", "features"],
  "properties": {
    "conformsTo": {
      "$ref": "conformsto.json"
    },
    "type": {
      "type": "string",
      "enum": ["FeatureCollection"]
    },
    "featureType": {
      "$ref": "featuretype.json"
    },
    "geometryDimension": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3
    },
    "coordRefSys": {
      "$ref": "coordrefsys.json"
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "link.json"
      }
    },
    "features": {
      "type": "array",
      "items": {
        "$ref": "feature.json"
      }
    }
  }
}
